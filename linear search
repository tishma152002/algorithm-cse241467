#include <iostream>
using namespace std;

int main() {
    int n, key;

    cout << "Enter number of elements: ";
    cin >> n;

    int arr[n];

    cout << "Enter " << n << " elements: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << "Enter element to search: ";
    cin >> key;

    int pos = -1; // to store index
    for (int i = 0; i < n; i++) {
        if (arr[i] == key) {
            pos = i; // found
            break;
        }
    }

    if (pos == -1) {
        cout << "Element not found!" << endl;
    } else {
        cout << "Element found at position " << pos + 1 << endl;
    }

    return 0;
}
